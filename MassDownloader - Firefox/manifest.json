{
	"browser_specific_settings": {
		"gecko": {
			"id": "massdownloader@redshock.com",
			"strict_min_version": "42.0"
		}
	},
	"manifest_version": 2,
	"name": "Mass Image Downloader",
	"description": "Download all images on one page in one click.",
	"version": "1.0",
	"browser_action":{
		"default_popup": "popup.html",
		"default_icon":{
			"16": "/icon16.png",
			"32": "/icon32.png",
			"48": "/icon48.png",
			"128": "/icon128.png"
		}
	},
	"icons":{
		"16": "/icon16.png",
		"32": "/icon32.png",
		"48": "/icon48.png",
		"128": "/icon128.png"
	},
	"permissions":[
		"activeTab",
		"downloads",
		"tabs",
		"scripting",
		"storage",
		"unlimitedStorage"
	]
}